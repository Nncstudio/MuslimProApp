<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <style name="GreenActionBarTheme" parent="GreenActionBarTheme.Base">
        <item name="cardViewStyle">@style/CardView.Light</item>


    </style>


    <!-- ActionBar styles -->
    <style name="GreenActionBarTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="cardViewStyle">@style/CardView.Light</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/menuNavigation3colorPrimary</item>
    </style>

    <style name="MenuNavigation3Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="cardViewStyle">@style/CardView.Light</item>
        <item name="colorPrimary">@color/menuNavigation3colorPrimary</item>
        <item name="colorPrimaryDark">@color/menuNavigation3colorPrimaryDark</item>
        <item name="colorAccent">@color/menuNavigation3colorAccent</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/menuNavigation3colorPrimary</item>
    </style>

</resources>
